<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:paddingTop="50dp"
    tools:context=".Currency">

    <EditText
        android:id="@+id/enterTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="       Enter Temperature"
        android:inputType="numberDecimal"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/CToF"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:background="#FF3D00"
            android:text="Celcious to Fahrenheit"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/CToK"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="#FF3D00"
            android:text="Celcious to Kelvin"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/FToC"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:background="#FF3D00"
            android:text="Fahrenheit to Celcious"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/FToK"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="#FF3D00"
            android:text="Fahrenheit to Kelvin"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/KToC"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:background="#FF3D00"
            android:text="Kelvin to Celcious"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/KToF"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="#FF3D00"
            android:text="Kelvin to Fahrenheit"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Result ="
            android:textSize="30sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Get"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/refresh" />

    </LinearLayout>
</LinearLayout>